<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waterpurifier.fragment.MineFeedbackFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include layout="@layout/widget_head" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <EditText
                android:id="@+id/et_input_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入反馈信息"
                android:lines="5"
                android:textSize="20.0dp" />

            <Button
                android:id="@+id/btn_add_feedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:background="@color/head_blue_bg"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:text="提 交"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>