<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waterpurifier.fragment.MineFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroud_color"
            android:orientation="vertical"
            android:paddingBottom="30.0dp">

            <include layout="@layout/widget_head" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220.0dp"
                android:background="@mipmap/my_top">

                <ImageView
                    android:id="@+id/iv_btn_setting"
                    android:layout_width="30.0dp"
                    android:layout_height="30.0dp"
                    android:layout_marginTop="10.0dp"
                    android:layout_marginRight="10.0dp"
                    android:src="@mipmap/my_set2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="100.0dp"
                    android:layout_height="100.0dp"
                    android:src="@mipmap/login_top"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/white"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="120.0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />


                <ImageView
                    android:layout_width="50.0dp"
                    android:layout_height="50.0dp"
                    android:src="@mipmap/my_rili"
                    android:layout_marginRight="20.0dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dp"
                    android:layout_below="@id/profile_image"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="程立根"
                        android:textColor="@color/white"
                        android:textSize="24.0sp"/>

                    <ImageView
                        android:layout_width="30.0dp"
                        android:layout_height="30.0dp"
                        android:src="@mipmap/my_boy" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:background="@mipmap/my_red">

                <TextView
                    android:id="@+id/tv_balance_title"
                    android:textSize="20.0sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30.0dp"
                    android:text="余额: "
                    android:layout_centerVertical="true" />

                <TextView
                    android:textSize="18.0sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_balance_title"
                    android:text="2569.08元"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_btn_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50.0dp"
                    android:src="@mipmap/my_recharge"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <View
                android:background="#d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="25.0dp" />

            <RelativeLayout
                android:id="@+id/rl_my_set_row_1"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:background="@color/white">

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#4d4d4d"
                    android:id="@+id/tv_mine_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dp"
                    android:text="分享有礼"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_mine_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18.0dp"
                    android:src="@mipmap/details_small"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:background="#d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_my_set_row_2"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:background="@color/white">

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#4d4d4d"
                    android:id="@+id/tv_mine_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dp"
                    android:text="帮助中心"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_mine_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18.0dp"
                    android:src="@mipmap/details_small"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:background="#d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_my_set_row_3"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:background="@color/white">

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#4d4d4d"
                    android:id="@+id/tv_mine_label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dp"
                    android:text="意见反馈"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_mine_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18.0dp"
                    android:src="@mipmap/details_small"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:background="#d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_my_set_row_4"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:background="@color/white">

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#4d4d4d"
                    android:id="@+id/tv_mine_label4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dp"
                    android:text="检查更新"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_mine_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18.0dp"
                    android:src="@mipmap/details_small"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#4d4d4d"
                    android:id="@+id/tv_mine_value4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16.0dp"
                    android:text="当前版本：1.0.128"
                    android:layout_toLeftOf="@id/iv_mine_image4"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:background="#d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />


            <LinearLayout
                android:gravity="top|center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30.0dp"
                android:layout_marginLeft="30.0dp"
                android:layout_marginRight="30.0dp">

                <Button
                    android:textSize="18.0sp"
                    android:textColor="@color/white"
                    android:id="@+id/btn_logout"
                    android:background="#ff5d2f"
                    android:layout_width="match_parent"
                    android:layout_height="60.0dp"
                    android:text="退出账户" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
