<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waterpurifier.fragment.MineUpdatePwdFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_color">

        <include layout="@layout/widget_head" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <EditText
                android:id="@+id/et_input_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="45.0dp"
                android:hint="请设置新密码（6~20位）"
                android:background="@color/white"
                android:textSize="20.0dp" />

            <EditText
                android:id="@+id/et_input_new_pwd2"
                android:layout_width="match_parent"
                android:layout_height="45.0dp"
                android:hint="请设置新密码（6~20位）"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:textSize="20.0dp"/>

            <Button
                android:id="@+id/btn_update_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@color/head_blue_bg"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:text="提 交"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
